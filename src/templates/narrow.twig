{# One-column template for narrow content. The content is as wide as the narrow container #}
{%  include 'snippets/header' %}

{% block banner %}
    {{ _page.content('banner') }}
{% endblock %}

<div class="Container Container--pad ContentBg">
    <div class="Content clearfix">
        {% if _core.theme.settings.showBreadcrumb == "yes" and _page.isHome == false %}
            {{ _page.breadcrumb() }}
        {% endif %}
        <div class="Container Container--narrow">
            <main id="main">{% block main _page.content() %}</main>
        </div>
    </div>
</div>

{%  include 'snippets/footer' %}
