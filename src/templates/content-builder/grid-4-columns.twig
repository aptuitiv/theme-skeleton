{# Set the vertical alignment #}
{% set alignment = '' %}
{% if fields.verticalAlignment == 'center' %}
    {% set alignment = ' align-center' %}
{% elseif fields.verticalAlignment == 'bottom' %}
    {% set alignment = ' align-end' %}
{% endif %}

{# Build the grid #}
<div class="Container Container--pad">
    <div class="grid g-4 nc-1 nc-2-sm nc-4-md{{ alignment }}">
        {% for column in columns %}
            <div class="col-1-1 col-1-2-sm col-1-4-md">
                {% for element in column.elements %}
                    {{ element.content }}
                {% endfor %}
            </div>
        {% endfor %}
    </div>
</div>