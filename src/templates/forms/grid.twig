{% import 'macros/form-macros.twig' as macros %}

{{ macros.formSuccessMessage(form) }}

{% set form.class = 'js-form' ~ random_string() %}
{{ form.openTag }}
    {{ macros.formErrorContainer(form) }}
    {{ macros.buildGridFormFields(form) }}
    {{ macros.captcha(form) }}

    <div class="grid g-2-lg mb-2 nc-1 nc-2-lg">
        <div class="col-1-1 col-1-4-lg"></div>
        <div class="col-1-1 col-3-4-lg">
            {{ macros.requiredMessage() }}
            {{ macros.formButton(form.submitButtonText) }}
        </div>
    </div>
{{ form.closeTag }}

{{ macros.formValidateHandlerJs(form) }}
