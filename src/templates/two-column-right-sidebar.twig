{% include 'snippets/header' %}

{% block banner %}
    {{ _page.content('banner') }}
{% endblock %}

<div class="Container Container--pad ContentBg">
    <div class="Content clearfix">
        {% if _core.theme.settings.showBreadcrumb == "yes" and _page.isHome == false %}
            {{ _page.breadcrumb() }}
        {% endif %}
        <div class="grid g-3 nc-1 nc-2-lg">
            <div class="col-1-1 col-2-3-lg col-3-4-xl">
                <main id="main">{% block main _page.content() %}</main>
            </div>
            <div class="col-1-1 col-1-3-lg col-1-4-xl">
                <aside class="mb-4-lg">{{ _api.navigation.getSubNavigationByUrl.key('main').getParentItem('yes').showSubNav('yes').template('sidebar') }}</aside>
                <aside>{% block sidebar _page.content("sidebar") %}</aside>
            </div>
        </div>
    </div>
</div>

{% include 'snippets/footer' %}
