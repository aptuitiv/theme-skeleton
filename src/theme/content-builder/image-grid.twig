{% if images|first.image %}
    {# Max width for the images #}
    {% set width = 800 %}

    {# Set the image classes based on the number of images #}
    {% set count = numberOfImages == 'Auto' ? images|length : numberOfImages %}
    {% if count == null %}
        {% set count = images|length %}
    {% endif %}


    {% set class = "col-1-1" %}
    {% if count % 6 == 0 %}
        {% set class = class ~ ' col-sm-1-2 col-md-1-3 col-lg-1-6' %}
        {% set width = 250 %}
    {% elseif count % 5 == 0 %}
        {% set class = class ~ ' col-sm-1-2 col-md-1-3 col-lg-1-5' %}
        {% set width = 300 %}
    {% elseif count % 4 == 0 %}
        {% set class = class ~ ' col-sm-1-2 col-md-1-3 col-lg-1-4' %}
        {% set width = 400 %}
    {% elseif count % 3 == 0 %}
        {% set class = class ~ ' col-md-1-2 col-lg-1-3' %}
        {% set width = 500 %}
    {% elseif count == 2 %}
        {% set class =class ~  ' col-md-1-2' %}
    {% elseif count > 6 %}
        {% set class = class ~ ' col-sm-1-2 col-md-1-3 col-lg-1-4' %}
        {% set width = 400 %}
    {% endif %}

    <div class="Container Container--pad">
        <div class="grid g-2">
            {% for image in images %}
                <div class="{{ class }}">
                    {% if image.title %}
                        <h2 class="text-center underline-center mb-1 px-3">{% if image.link %}<a href="{{ image.link }}">{% endif %}{{ image.title }}{% if image.link %}</a>{% endif %}</h2>
                    {% endif %}
                    {% if image.image %}
                        {% set image.image.class = "fit-cover w-100" %}
                        {% do image.image.alt.default(image.title) %}
                        {% do image.image.lazy() %}
                        {% if image.link %}<a href="{{ image.link }}">{% endif %}<span class="flex aspect-{{ imageAspectRatio|replace('x', '-') }}">{{ image.image.tag }}</span>{% if image.link %}</a>{% endif %}
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}
