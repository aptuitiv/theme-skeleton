{% if images|first.image %}
    <div class="Container Container--pad">
        <div class="grid g-2">
            {% for image in images %}
                {% set class = "col-1-1" %}
                {% if columns == '2' %}
                    {% set class = class ~ ' col-lg-1-2' %}
                {% elseif columns == '3' %}
                    {% set class = class ~ ' col-md-1-2 col-lg-1-3' %}
                {% elseif columns == '4' %}
                    {% set class = class ~ ' col-sm-1-2 col-md-1-3 col-lg-1-4' %}
                {% endif %}
                <div class="{{ class }}">
                    {% if image.title %}
                        <h2 class="text-center underline-center mb-3 px-3">{{ image.title }}</h2>
                    {% endif %}
                    {% if image.image %}
                        {% set image.image.class = "w-100 h-100 fit-cover" %}
                        {% do image.image.lazy() %}
                        {{ image.image.tag }}
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}
